<?xml version="1.0" encoding="UTF-8"?>
<globalSchemaToWrapperMappingDefinition>

	<!-- map an XPath selector to a Wrapper-Instances that offer information 
		about it -->
	<mapping>
		<!-- selector is an XPath expression pointing to an element of the global schema -->
		<selector>bookstore/book</selector>
		<wrappers>
			<!-- multiple wrappers might offer data for that specific element -->
			<wrapper localSchemaMappingFile="data/config/XmlBookstoreMapping.xml">XmlWrapper</wrapper>
			<wrapper localSchemaMappingFile="data/config/CsvBookstoreMapping.xml">CsvWrapper</wrapper>
			<wrapper localSchemaMappingFile="data/config/DatabaseBookstoreMapping.xml">DatabaseWrapper</wrapper>
		</wrappers>
	</mapping>
	
